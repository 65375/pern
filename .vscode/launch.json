{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug API (Nodemon)",
        "type": "node",
        "request": "launch",
        "runtimeExecutable": "npx",
        "runtimeArgs": [
          "nodemon",
          "--exec",
          "ts-node",
          "server.ts"
        ],
        "restart": true,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "outFiles": ["${workspaceFolder}/**/*.js"],
        "skipFiles": ["<node_internals>/**"]
      }
    ]
  }
  